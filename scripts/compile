#!/bin/bash -v
scripts/getsyscalls > src/SysCalls.hs
cd src
hsc2hs *.hsc || exit
GHC="ghc -O -cpp -ffi -Wall -fno-warn-unused-binds -fno-warn-orphans -fglasgow-exts -fallow-undecidable-instances"
$GHC --make Bot.hs -o ../Bot || exit
$GHC --make Testsuite.hs -o ../Testsuite || exit
$GHC --make Local.hs -o ../Local
